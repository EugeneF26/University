<?xml version="1.0" encoding="UTF-8"?>
<configuration>
	<appender name="TESTS"
		class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n
			</pattern>
		</encoder>
	</appender>

	<logger
		name="com.project.university.repository.ProfessorRepositoryTest"
		level="error">
		<appender-ref ref="TESTS" />
	</logger>

	<root level="error">
		<appender-ref ref="TESTS" />
	</root>
</configuration>